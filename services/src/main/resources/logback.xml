<configuration>
   
   	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	   <layout>
	     <Pattern>[expensecalculator]|%date{HH:mm:ss.SSS} %-5level| %class.%method\(\) : %msg%n</Pattern>
